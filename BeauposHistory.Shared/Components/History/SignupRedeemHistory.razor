
@using BeauposHistory.Shared.Enums

<div class="signup-redeem-container">
    <h3 class="view-title">@GetViewTitle()</h3>

    <div class="summary-section">
        <div class="total-text">Total - 1</div>
    </div>

    @* 列表循环 *@
    @foreach (var record in MockRecords)
    {
        <div class="history-card">
            <div class="card-body">
                <div class="main-info">
                    <div class="title-row">
                        <span class="primary-text">Manual Topup</span>
                        <span class="customer-ref">WK •••••••3528</span>
                    </div>
                    <div class="secondary-text">05:41 PM, 06/02/2026</div>
                </div>

                @* 这里的 Badge 会根据选中的枚举自动显示 Point, Credit 或 Voucher *@
                <div class="card-footer-line">
                    <span class="status-badge">@GetUnitName() : @record.Amount</span>
                </div>
            </div>
        </div>
    }
</div>

