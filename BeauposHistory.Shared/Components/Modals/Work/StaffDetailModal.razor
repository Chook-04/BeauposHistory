@using BeauposHistory.Shared.Components.Common

<BaseModal Visible="Visible" OnClose="OnClose" Size="BaseModal.ModalSize.Medium">
    <div class="staff-detail-content">
        <div class="modal-header-custom">
            <button type="button" class="custom-close-btn" @onclick="OnClose">
                <i class="oi oi-x"></i>
            </button>
            <h3 class="staff-title">@StaffName</h3>
        </div>

        <div class="stats-summary-grid">
            <div class="stat-box">
                <label>Total Effort</label>
                <span class="val">@TotalEffort.ToString("N2")</span>
            </div>
            <div class="stat-box">
                <label>Sale Effort</label>
                <span class="val">@SaleEffort.ToString("N2")</span>
            </div>
            <div class="stat-box">
                <label>Redeem Effort</label>
                <span class="val">0.00</span>
            </div>
            <div class="stat-box">
                <label>H.O.F</label>
                <span class="val">0.00</span>
            </div>
        </div>

        <div class="tab-switcher">
            <button class="@(activeTab == "Item" ? "active" : "")" @onclick='() => activeTab = "Item"'>Item</button>
            <button class="@(activeTab == "Order" ? "active" : "")" @onclick='() => activeTab = "Order"'>Order</button>
        </div>

        <div class="detail-list">
            @if (activeTab == "Item")
            {
                <div class="item-card">
                    <div class="item-main">
                        <div class="icon-placeholder">🖼️</div>
                        <div class="item-text">
                            <div class="name">Antiaging facial</div>
                            <div class="price">209.00</div>
                        </div>
                    </div>
                    <div class="item-metrics">
                        <div class="m-box">
                            <label>Effort</label>
                            <span class="bold">209.00</span>
                        </div>
                        <div class="m-box">
                            <label>H.O.F</label>
                            <span class="bold">0.00</span>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</BaseModal>

